@model IEnumerable<VipFitness_ADMIN.Models.TrainingModel>

@{
    ViewData["Title"] = "Trainings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- JS Dosyaları -->
<script src="~/Content/js/jquery-3.7.0.js"></script>
<script src="~/Content/js/jquery.dataTables.min.js"></script>
<script src="~/Content/js/dataTables.buttons.min.js"></script>
<script src="~/Content/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/js/jszip.min.js"></script>
<script src="~/Content/js/buttons.html5.min.js"></script>
<script src="~/Content/js/buttons.print.min.js"></script>
<script src="~/Content/js/sweetalert2.all.min.js"></script>

<!-- CSS Dosyaları -->
<link rel="stylesheet" href="/Content/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="~/Content/css/buttons.dataTables.min.css">
<link rel="stylesheet" href="~/Content/css/sweetalert2.min.css" />

<style>
    .custom-label {
        font-weight: bold;
        font-size: 16px;
        color: #007bff; /* Özel renk belirleme */
        /* Diğer stil özelliklerini ekleyebilirsiniz */
    }</style>


<div class="container">

    <div class="col-md-12">
        <div class="card">

            <div class="card-header">
                <h4>Vip Fitness Antreman Listesi</h4>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateModal">
                Yeni Kayıt Ekle
            </button>


            <div class="modal fade" tabindex="-1" id="CreateModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Yeni Kayıt Ekle</h5>
                            @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
                        </div>
                        <div class="modal-body">
                            <!-- Form Başlangıcı -->
                            <form method="post" asp-action="CreateTraining" asp-controller="Trainings" id="CreateTrainingFrm">
                                @Html.AntiForgeryToken()
                                <!-- Antreman Adı Alanı -->
                                <div class="mb-3">
                                    <label for="TrainingName" class="form-label custom-label">Antreman Adı</label>
                                    <input type="text" class="form-control" id="create-TrainingName" name="TrainingName" placeholder="Antreman Adını Girin" required>
                                </div>


                                <!-- Açıklama Alanı-->
                                <div class="mb-3">
                                    <label for="Explanation" class="form-label custom-label">Açıklaması</label>
                                    <textarea class="form-control" id="create-Explanation" name="Explanation" placeholder="Açıklama Girin"></textarea>
                                </div>

                                <!-- Antreman grubu Alanı (Smallint) -->
                                <div class="mb-3">
                                    <label for="TrainingCategory" class="form-label custom-label">Antreman Grubu</label>
                                    <select class="form-select" id="create-TrainingCategory" name="TrainingCategory" required>
                                        <option value="1">1.Antreman Grubu</option>
                                        <option value="2">2.Antreman Grubu</option>
                                        <option value="3">3.Antreman Grubu</option>
                                    </select>
                                </div>

                                <!-- Antreman silindimi alanı-->
                                <input type="hidden" name="isdeleted" value="false" />

                                <!-- Antreman Resim Alanı-->
                                <div class="mb-3">
                                    <label for="resim" class="form-label custom-label">Antreman Resmi/Gif:</label>
                                    <input type="file" class="form-control" id="ImgData" name="ImgData" accept=".jpg, .jpeg, .png, .gif" required>
                                </div>

                                <!-- Gizli div elemanları hata ve başarı mesajları için -->
                                <div class="alert alert-danger" id="error-message" style="display: none;"></div>
                                <div class="alert alert-success" id="success-message" style="display: none;"></div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    <button type="submit" id="submit-button-create" formaction="CreateTraining" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                            <!-- Form Sonu -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- DÜZENLEME BÖLÜMÜ AŞAĞIDA BAŞLAMAKTADIR.-->
            <div class="modal" tabindex="-1" id="eModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Yeni Kayıt Ekle</h5>
                            @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
                        </div>
                        <div class="modal-body">
                            <!-- Form Başlangıcı -->
                            <form method="post" asp-action="Edit" asp-controller="Users" id="EditUserFrm">
                                @Html.AntiForgeryToken()
                                <!-- Kullanıcı Adı Alanı -->
                                <div class="mb-3">
                                    <label for="username" class="form-label custom-label">Kullanıcı Adı</label>
                                    <input type="text" class="form-control" id="Edit-username" name="username" required>
                                </div>

                                <!-- Şifre Alanı -->
                                <div class="mb-3">
                                    <label for="password" class="form-label custom-label">Şifre</label>
                                    <input type="password" class="form-control" id="Edit-password" name="password" placeholder="Şifre değiştirmek için yeni şifreyi girin">
                                </div>

                                <!-- Kullanıcı Türü Alanı (Smallint) -->
                                <div class="mb-3">
                                    <label for="UType" class="form-label custom-label">Kullanıcı Türü</label>
                                    <select class="form-select" id="Edit-UType" name="UType" required>
                                        <option value="0">Super Admin</option>
                                        <option value="1">Admin</option>
                                        <option value="2">Kullanıcı</option>
                                    </select>
                                </div>

                                <input type="hidden" name="isdeleted" value="false" />
                                <input type="hidden" name="id" id="id" />


                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    <button type="submit" id="submit-button-edit" formaction="Edit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                            <!-- Form Sonu -->
                        </div>
                    </div>
                </div>
            </div>


            <!--   TABLO LİSTELEME BÖLÜMÜ AŞAĞIDA BAŞLAMAKTADIR.-->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="table_id">
                        <thead>
                            <tr>
                                <th data-priority="1">Antreman Adı</th>
                                <th data-priority="2">Antreman Kategorisi</th>
                                <th data-priority="3">Açıklama</th>
                                <th data-priority="4">Resim URL</th>
                                <th data-priority="5">Silinmiş Mi?</th>
                                <th data-priority="6">Yönet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TrainingName</td>
                                    <td>@item.TrainingCategory</td>
                                    <td>@item.Explanation</td>
                                    <td>@item.ImgData</td>
                                    <td>@item.Isdeleted</td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-sm edit-btn" data-id="@item.Id">Düzenle</button>
                                        @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { @class = "btn btn-danger btn-sm delete-btn", onclick = "return ConfirmDelete("+item.Id+");" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>

</div>


@section Scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#submit-button-create').click(function () {
                event.preventDefault();
                var formData = new FormData($('#CreateTrainingFrm')[0]);
                var fileInput = document.getElementById('ImgData');
                formData.append('ImgData', fileInput.files[0]);
                debugger;
                $.ajax({
                    url: '/Trainings/CreateTraining',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        if (data.success) {
                            $('#success-message').text('Antrenman başarıyla oluşturuldu.');
                            $('#success-message').show();
                            $('#error-message').hide();
                            setTimeout(function () {
                                $('#CreateModal').modal('hide');
                                // İhtiyaca göre sayfa yenileme işlemi yapabilirsiniz.
                            }, 2000);
                        } else {
                            $('#error-message').text(data.message);
                            $('#error-message').show();
                            $('#success-message').hide();
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#error-message').text('Bir hata oluştu: ' + xhr.responseText);
                        $('#error-message').show();
                        $('#success-message').hide();
                    }
                });
            });
        });
    </script>
}



<script>



    // Datatable aktarım butonlarını aktif ettim.
    $(document).ready(function () {
        $('#table_id').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'csv'
            ]
        });
    });

    // Delete butonuna tıklandığında rütuşları...  Sweet alert v.b
    function ConfirmDelete(itemId) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu kaydı silmek istediğinizden emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal',
        }).then((result) => {
            if (result.isConfirmed) {
                // Silme işlemi için Controller'a yönlendirme yaptım. Yönlendirme bittiğinde controller tarafında tekrar sayfayı yeniliyor.
                // bu sebeple buraya yenileme koymadım.

                window.location.href = '/Users/Delete/' + itemId; // itemId: silinecek öğenin ID değeri
            }
        });
        return false; // ActionLink'e tıklamayı iptal etmek için
    }

    $('.edit-btn').on('click', function () {
        var userId = $(this).data('id');
        // AJAX isteği ile kullanıcı bilgilerini getir
        $.ajax({
            url: '/Users/GetUserDetails/' + userId,
            type: 'GET',
            success: function (data) {
                // Başarılı cevap geldiğinde modal içeriğine verileri yerleştir

                $('#Edit-username').val(data.username);
                $('#Edit-password').val(''); // Şifreyi temizle (isteğe bağlı, şifreyi değiştirmek istemiyorsanız)

                $('#Edit-UType option[value="' + data.UType + '"]').prop('selected', true);
                $('#EditUserFrm input[name="id"]').val(data.id);

                // Modal'ı aç
                $('#eModal').modal('show');
                console.log(data);
            },
            error: function () {
                console.log("hata var hata aloo !!");
                console.log(data);
            }
        });
    });



</script>